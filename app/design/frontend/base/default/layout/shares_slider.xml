<?xml version="1.0"?>
<layout>
    <cms_page>
        <reference name="head">
            <action method="addItem"><type>skin_css</type><name>css/youama/slider/slider.css</name></action>
            <action ifconfig="youamaslider/mainoptions/jquery" method="addJs"><script>youama/jquery-1-7-1.js</script></action>
            <action ifconfig="youamaslider/mainoptions/jquery_ui" method="addJs"><script>youama/slider/jquery-1-10-3-ui.js</script></action>
            <action method="addJs"><script>youama/slider/slider.js</script></action>
            <block type="shares/slider" name="youamaslider" as="youamaslider">
                <action method="setTemplate">
                    <template>shares/shares_style.phtml</template>
                </action>
            </block>
        </reference>
        <reference name="content">
            <block type="shares/slider" name="youamaslider" as="youamaslider">
                <action method="setTemplate">
                    <template>shares/shares_slider.phtml</template>
                </action>
            </block>
        </reference>
    </cms_page>

</layout>